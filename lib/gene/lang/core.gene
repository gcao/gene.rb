(class Hash
  ^^global

  (method size _
    ($invoke self "size")
  )

  (method get key
    ($invoke self 'get' key)
  )

  (method keys _
    ($invoke self 'keys')
  )

  (method each f
    ((.keys) .each
      (bind self
        (fnx key
          (var value (.get key))
          (f key value)
        )
      )
    )
  )
)

