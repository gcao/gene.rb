grammar GeneGrammar
  rule document
    expr
  end

  rule expr
    comp_expr / array / atom
  end

  rule comp_expr
    '(' expr+ ')'
  end

  rule array
    '[' expr* ']'
  end

  rule atom
    id / string / separator
  end

  rule id
    ([^ '"]+) {
      def content
        Gene::Type::Ident.new(text_value)
      end
    }
  end

  rule string
    (('"' [^"]* '"') / ("'" [^']* "'")) {
      def content
        text_value
      end
    }
  end

  rule separator
    [ ]+
  end
end

