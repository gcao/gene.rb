/**
 * This starter project recommended using Microsoft TSLint rules.
 * Please see https://github.com/Microsoft/tslint-microsoft-contrib for more details.
 */

{
  "extends": [
    "tslint-microsoft-contrib"
  ],
  "rules": {
    "mocha-no-side-effect-code": false,
    "missing-jsdoc": false,
    "no-relative-imports": false,
    "export-name": false,
    "promise-function-async": false,
    "no-void-expression": false,
    "trailing-comma": [ // https://palantir.github.io/tslint/rules/trailing-comma/
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    // Gene customizations BEGIN
    "function-name": false,
    "no-any": false,
    "no-function-expression": false,
    "no-reserved-keywords": false,
    "variable-name": false,
    "no-string-literal": false,
    "no-suspicious-comment": false,
    // Gene customizations END
    "max-classes-per-file": false,
    "typedef": [
      true,
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "member-variable-declaration"
    ]
  }
}